<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entrer le nom, prénom et numéro de licence du joueur"
        android:id="@+id/textViewAjouterJoueurDialog" />

    <EditText
        android:id="@+id/editTextNomAjouterJoueurDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextPrenomAjouterJoueurDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextNumLicenceAjouterJoueurDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Numéro de licence"
        android:inputType="number"
        android:padding="10dp" />

</LinearLayout>